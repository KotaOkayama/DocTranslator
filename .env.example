# API Configuration
GENAI_HUB_API_KEY=
GENAI_HUB_API_URL=

# Application Configuration
DEBUG=false
LOG_LEVEL=INFO

# File Upload Configuration
MAX_FILE_SIZE=100MB
UPLOAD_TIMEOUT=300

# Translation Configuration
# Note: DEFAULT_MODEL is no longer needed as models are auto-selected
# from available models in alphabetical order
DEFAULT_SOURCE_LANG=en
DEFAULT_TARGET_LANG=ja

# Cache Configuration
USE_TRANSLATION_CACHE=true

# Performance Configuration
PARALLEL_WORKERS=4
BATCH_SIZE=5
CHUNK_SIZE=1500

# API Configuration
API_TIMEOUT=30
RETRY_COUNT=2

# LibreOffice Configuration (for PDF conversion)
LIBREOFFICE_TIMEOUT=120

# Security Configuration
# Set to true in production to disable debug endpoints
PRODUCTION=false

# Timezone Configuration
TZ=UTC
